<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Take_Care</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Take_Care.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/c4254e24a8.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row mynav p-3">
                <nav class="navbar navbar-expand-lg">
                    <div class="col-2">
                        <a class="navbar-brand mymain" href="#" style="font-size: 35px; margin-left: 300px;">
                            <img src="~/img/logo.png" class="myimg" style="height: 100px; width:200px; margin: -80px;">
                            TakeCare
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="col-8">
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#"
                                       style="margin-left: 300px;">首頁</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        關於我們
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">機構簡介</a></li>
                                        <li><a class="dropdown-item" href="#">員工介紹</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        Dropdown link
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Action</a></li>
                                        <li><a class="dropdown-item" href="#">Another action</a></li>
                                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">試算表</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-2">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="#" class="nav-link"><i class="bi bi-person-heart"></i></a>
                            </li>
                            <div class="fontSize">
                                <button style="font-size: 10px;border: 0px; background-color: transparent; margin-left: 30px;"
                                        class="font jq-small">
                                    小
                                </button>
                                <button style="font-size: 15px;border: 0px; background-color: transparent; margin-left: 10px;"
                                        class="font jq-medium">
                                    中
                                </button>
                                <button style="font-size: 20px;border: 0px; background-color: transparent; margin-left: 10px;"
                                        class="font jq-large">
                                    大
                                </button>
                            </div>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div class="" style="background-color:#dcd0c3">
        <main role="main" class="pb-3">
            @RenderBody()
            @await Html.PartialAsync("_PartialName")
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Take_Care - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
