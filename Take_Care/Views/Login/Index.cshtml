@model IEnumerable<Take_Care.Models.MemberView>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var list = TempData["Member"];
}
<h1 class="logintitle">Login</h1>
<div class="row" id="loginApp">
    <div class="col-2"></div>
    <div class="leftBox col-4">
        <div>
            <p id="loginresult" style="color:red;"></p>
            <input type="text" id="email" placeholder="帳號 / Email" required class="inputBox" name="Account" v-model="member.Account">
            <input type="password" id="password" placeholder="輸入密碼" required class="inputBox" name="Password" v-model="member.Password">
            <div>
                <div>
                    <input type="checkbox" id="terms">
                    <label for="terms">記住我的帳號</label>
                </div>
                <div>
                    <a>忘記密碼</a><span class="text-end">?</span>
                </div>
            </div>
            <!-- 给登入按鈕指定ID "loginButton" -->
            <button id="loginButton" v-on:click="DoLogin()">登入<span>&#x27f6;</span></button>
            <span class="login_msg" style="color:black;">我還沒有帳號 ?<a href="https://localhost:7036/Login/SignUp">SignUp Now</a></span>
        </div>
    </div>
    <div class="rightBox col-4" style="padding-top: 100px">
        <a class="btn btn-large fb_Link">
            <i class="bi bi-facebook"></i>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
            </svg> Login with Facebook
            <span></span><span></span><span></span><span></span>
        </a>
        <a class="btn btn-large tw_Link">
            <i class="bi bi-twitter-x"></i>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16">
                <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"/>
            </svg> Login with Twitter
            <span></span><span></span><span></span><span></span>
        </a>
        <a class="btn btn-large g_Link" v-on:click="startSignIn()">
            <i class="bi bi-google"></i>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
            </svg> Login with Google
            <span></span><span></span><span></span><span></span>
        </a>
    </div>
    <div class="col-2"></div>
</div>
<div id="GOOGLE_login"></div>
<script src="~/js/login.js"></script>
<script src="https://accounts.google.com/gsi/client" async defer></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
