<style>
    .profile-head h3 {
        color: #333;
    }

    .profile-edit-btn {
        border: none;
        border-radius: 2rem;
        padding: 5%;
        font-weight: 600;
        color: #6c757d;
        font-size:20px;
        cursor: pointer;
        position: relative;
        /* left: 22rem; */
    }

    .profile-head .nav-tabs {
        margin-bottom: 5%;
    }

        .profile-head .nav-tabs .nav-link {
            font-weight: 600;
            border: none;
        }

            .profile-head .nav-tabs .nav-link.active {
                border: none;
                border-bottom: 2px solid #0062cc;
            }


    .profile-tab label {
