@model IEnumerable<Take_Care.Models.Citizenshipstatus>



<div class="container">
	<p>@Html.DisplayNameFor(aa => aa.CitizenshipstatuId)</p>
	@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(aa => item.CitizenshipstatuId)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Category)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Care)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Transport)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Aid)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Respite)
			</td>
		</tr>
	}
