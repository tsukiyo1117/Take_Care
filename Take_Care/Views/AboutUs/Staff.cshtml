@{
}

@model List<Employee>

@*篩選按鈕*@
<div class="button-container">
	<button id="btnselectall">全部</button>
	<button id="btnselectman">男性</button>
	<button id="btnselectwoman">女性</button>
</div>


@*卡片*@
<div class="custom-container">
	<div class="row">
		@foreach (Employee employee in Model)
		{

			<div class="card col-3" style="width: 15rem">
				<img src="@employee.PhotoUrl" class="card-img-top" alt="...">
				<div class="card-body">
					<h3 class="card-title">@employee.EmployeeName</h3>
					<p class="card-text">
						<span class="gender">@employee.Gender</span>性照顧服務員
					</p>
				</div>
			</div>
		}

	</div>
</div>


<script>
	//顯示全部照服員
	btnselectall.addEventListener("click", function filterall() {
		document.querySelectorAll(".gender").forEach(function (item){
			item.parentNode.parentNode.parentNode.style.display = "block";
		})
	});
	
	//顯示男性照服員
	btnselectman.addEventListener("click", function filterman() {

		document.querySelectorAll(".gender").forEach(function (item) {
			if (item.innerText == "女") {
				item.parentNode.parentNode.parentNode.style.display = "none";
			} else {
				item.parentNode.parentNode.parentNode.style.display = "block";
			}
		})
	});

	//顯示女性照服員
	btnselectwoman.addEventListener("click", function filterwoman() {

		document.querySelectorAll(".gender").forEach(function (item) {
			if (item.innerText == "男") {
				item.parentNode.parentNode.parentNode.style.display = "none";
			} else {
				item.parentNode.parentNode.parentNode.style.display = "block";
			}
		})
	});


</script>

