@model List<Employee>

@*篩選功能*@
<div>
	<button class="selectbtn">全部</button>
	<button class="selectbtn">男性</button>
	<button class="selectbtn">女性</button>
</div>

@*卡片*@
<div class="custom-container">
	<div class="row">
		@foreach (Employee employee in Model)
		{

			<div class="card col-3" style="width: 18rem">
				<img src="@employee.PhotoUrl" class="card-img-top" alt="...">
				<div class="card-body">
					<h3 class="card-title">@employee.EmployeeName</h3>
					<p class="card-text">
						<span>@employee.Gender</span>性照顧服務員
					</p>
				</div>
			</div>
		}

	</div>
</div>


